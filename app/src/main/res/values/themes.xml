<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AeropenduloLab" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/primaryDark</item>
        <!-- Agregar color de la barra de navegación inferior -->
        <item name="android:navigationBarColor">@color/primaryDark</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="android:textSize">60sp</item> <!-- Tamaño de texto personalizado -->
    </style>

    <!-- Estilo parametros del controlador-->
    <style name="ParameterLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primario</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">8dp</item> <!-- Opcional: añade un espacio entre el texto y el campo de entrada -->
    </style>
    <!-- Estilo edits del controlador-->
    <style name="ParameterEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secundario</item> <!-- Color del texto secundario -->
        <item name="android:textSize">14sp</item>
        <item name="android:ems">8</item>
        <item name="android:inputType">numberDecimal</item> <!-- Tipo de entrada: número -->
        <item name="android:background">@color/white</item> <!-- Fondo transparente -->
        <item name="android:paddingStart">8dp</item> <!-- Opcional: añade un espacio entre el campo de entrada y el borde -->
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

<!-- Estilo de titulos en exp-->
    <style name="TextTitleStyleExp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo de Subtitulos en exp-->
    <style name="TextSubTitleStyleExp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo de Subtitulos en exp-->
    <style name="TextExecute">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">70sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/text</item>
    </style>



</resources>